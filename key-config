# Split related configurations
keybind = ctrl+s>i=new_split:up
keybind = ctrl+sk=new_split:down
keybind = ctrl+s>j=new_split:left
keybind = ctrl+s>l=new_split:right

keybind = ctrl+i=goto_split:up
keybind = ctrl+k=goto_split:down
keybind = ctrl+j=goto_split:left
keybind = ctrl+l=goto_split:right

keybind = ctrl+n>e=equalize_splits

# Close surface
keybind = ctrl+q=close_surface
